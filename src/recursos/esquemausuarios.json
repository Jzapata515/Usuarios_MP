{
    "registro": {
        "id": "body",
        "type": "object",
        "required": [
            "nombre",
            "apellido",
            "correo",
            "password"
        ],
        "properties": {
            "nombre":{
                "type": "string",
                "pattern": "^(?![nN][uU][lL]{2}$)\\s*\\S.*"
            },
            "apellido":{
                "type": "string",
                "pattern": "^(?![nN][uU][lL]{2}$)\\s*\\S.*"
            },
            "correo": {
                "type": "string",
                "format": "email"
            },
            "password":{
                "type": "string",
                "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)[a-zA-Z\\d]{8,}$",
                "minLength": 8
            }
        }
    },
